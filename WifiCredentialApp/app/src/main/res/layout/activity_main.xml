<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#272727"
    android:id="@+id/relLayout"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/mytoolbar"/>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mytoolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/roundbutton"
        android:onClick="onClickStart"
        android:padding="10dp"
        android:text="Connect"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:background="@drawable/roundbutton"
        android:onClick="onClickSend"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/ssid"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStop"
        android:layout_marginStart="43dp"
        android:layout_marginTop="62dp"
        android:layout_toEndOf="@+id/ssidLbl"
        android:singleLine="true"
        android:textColor="#ECF0F1" />

    <EditText
        android:id="@+id/ssidPassword"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ssid"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="57dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/ssidPassLbl"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#ECF0F1" />

    <TextView
        android:id="@+id/status"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ssidPassword"
        android:layout_alignRight="@+id/ssid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="174dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="-55dp"
        android:layout_toEndOf="@+id/statusview"
        android:background="@drawable/textviewborder"
        android:lineSpacingExtra="10sp"
        android:singleLine="false"
        android:textColor="#E74C3C"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mytoolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/roundbutton"
        android:onClick="onClickStop"
        android:padding="10dp"
        android:text="Disconnect"
        android:textColor="#FFFFFF" />



    <TextView
        android:id="@+id/ssidLbl"
        android:layout_width="86dp"
        android:layout_height="42dp"
        android:layout_below="@+id/buttonStart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="67dp"
        android:text="SSID"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssidPassLbl"
        android:layout_width="116dp"
        android:layout_height="42dp"
        android:layout_below="@+id/ssidLbl"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="61dp"
        android:text="Password"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/statusview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ssidPassLbl"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="65dp"
        android:text="Status View"
        android:textColor="#F6F6F4"
        android:textSize="24sp"
        android:textStyle="bold" />


</RelativeLayout>
